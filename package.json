{
  "name": "pi-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Raspberry Pi - route multiple web apps through a single port",
  "main": "src/gateway.js",
  "scripts": {
    "dev": "node src/gateway.js",
    "start": "node src/gateway.js",
    "manage": "node src/manage.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "raspberry-pi",
    "gateway",
    "reverse-proxy",
    "api-gateway"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
